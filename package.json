{
  "name": "furnishe",
  "version": "1.0.0",
  "description": "Furniture store ecommerce web application",
  "main": "server.js",
  "scripts": {
    "build": "npm-run-all clean transpile",
    "dev": "npm run dev-server",
    "start": "cross-env NODE_ENV=production node ./backend/dist-src/server",
    "dev-server": "cross-env NODE_ENV=development nodemon --exec babel-node ./backend/server",
    "transpile": "babel ./backend --out-dir ./backend/dist-src",
    "clean": "rimraf ./backend/dist-src",
    "stop-win": "Taskkill /IM node.exe /F",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false && npm install --prefix frontend && npm run build --prefix frontend"
  },
  "keywords": [
    "ecommerce",
    "shopping-cart",
    "nodejs",
    "nodejs-store",
    "es7",
    "furniture",
    "react-store",
    "redux"
  ],
  "author": "Johnpaul Attamah",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.22.10",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cloudinary": "^1.26.0",
    "cookie-parser": "^1.4.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-fileupload": "^1.2.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.11",
    "nodemailer": "^6.6.1",
    "stripe": "^8.156.0",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/node": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.14.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
